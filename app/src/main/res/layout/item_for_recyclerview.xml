<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/card_view_for_note">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note_title"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:text="Заголовок заметки"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimaryText"
                android:singleLine="true"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note_text"
                android:text="Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки Текст заметки "
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                android:layout_below="@+id/note_title"
                android:layout_alignLeft="@+id/note_title"
                android:layout_alignRight="@+id/note_title"
                android:singleLine="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
